<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="org.tappers.ui.page.ContactPage">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAME NAME"
        android:id="@+id/contactPageTitle"
        android:fontFamily="sans-serif-light"
        android:textAlignment="gravity"
        android:gravity="center"
        android:maxHeight="80dp"
        android:textSize="28dp"
        android:maxLines="1"
        android:minHeight="55dp"
        android:paddingBottom="5dp"
        android:minWidth="700dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="@drawable/title_border" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/character_background"
        android:background="@drawable/bgcol_default_big"
        android:layout_below="@+id/contactPageTitle">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:cropToPadding="true"
            android:src="@drawable/female"
            android:layout_gravity="center"
            android:background="@null"
            android:id="@+id/characterImageContact"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lstTransaction"
        android:background="@drawable/border_top_transaction"
        android:layout_below="@+id/txtHistory"></ListView>

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAME owes you a total of Â£50.00"
        android:fontFamily="sans-serif-light"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/txtTotal"
        android:layout_below="@+id/character_background"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Transaction History"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtHistory"
        android:layout_below="@+id/txtTotal"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:id="@+id/btnClearHistory"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/bin_history"
        android:layout_alignTop="@+id/txtHistory"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:layout_width="49dp"
        android:layout_height="54.5dp"
        android:id="@+id/btnNewTransaction"
        android:background="@drawable/title_border"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:src="@drawable/new_transaction"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="54.5dp"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:textSize="17dp"
        android:id="@+id/lblBackContacts"
        android:text="Menu"
        android:background="@null"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="55dp"
        android:id="@+id/btnBackContact"
        android:background="@null"
        android:scaleType="fitCenter"
        android:paddingRight="40dp"
        android:cropToPadding="true"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:src="@drawable/back_arrow"
        android:layout_alignParentTop="true" />





</RelativeLayout>
