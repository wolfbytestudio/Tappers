<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:ellipsize="start"
        android:gravity="center"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="50dp"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:id="@+id/image"/>
    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:id="@+id/name"
        android:layout_alignTop="@id/thumbnail"
        android:textStyle="normal"
        android:text="John Smith"
        android:textSize="25dp"
        android:layout_toRightOf="@id/thumbnail"
        android:textColor="#0F1012"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:fontFamily="sans-serif-light"
        android:id="@+id/payment"
        android:textColor="#37383A"
        android:textSize="15dp"
        android:layout_toRightOf="@id/thumbnail"
        android:text="John Smith owes you placeholder, placeholder and another placeholder"
        android:layout_toStartOf="@+id/btnDeleteContact" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif-light"
        android:textSize="10dp"
        android:textColor="#37383A"
        android:id="@+id/date"
        android:text="13/12/2015"
        />

    <ImageButton
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:id="@+id/btnDeleteContact"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/bin_history"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/date"
        android:layout_marginTop="10dp"
        android:focusable="false"/>


</RelativeLayout>